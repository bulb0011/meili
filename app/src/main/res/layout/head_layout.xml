<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp">

        <www.weimeng.com.meili.view.RoundImageView
            android:id="@+id/genduo_item_head_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/item_background"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            >
        </www.weimeng.com.meili.view.RoundImageView>

        <ImageView
            android:layout_toRightOf="@id/genduo_item_head_img"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:src="@mipmap/nan"
            android:layout_marginTop="18dp"
            />
        <ImageView
            android:layout_toRightOf="@id/genduo_item_head_img"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:src="@mipmap/nv"
            android:layout_marginTop="18dp"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/genduo_iten_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:textColor="@color/home_name"
            android:textSize="13dp"
            android:text="名字"
            android:layout_marginLeft="90dp"
            />

        <TextView
            android:id="@+id/genduo_item_shijian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间"
            android:textColor="@color/shijian"
            android:layout_toRightOf="@id/genduo_item_head_img"
            android:layout_marginTop="33dp"
            android:layout_marginLeft="5dp"
            android:textSize="12dp"
            />


        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/notcollect"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/collect"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:visibility="invisible"
            />

        <ImageView
            android:id="@+id/home_zjhu2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:background="@mipmap/printsign"
            android:layout_marginRight="35dp"
            />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/genduo_dainji_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/beijing"
        android:layout_margin="10dp"
        >

        <TextView
            android:id="@+id/gengduo_iten_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.5"
            android:lineSpacingExtra="2dp"
            android:layout_marginLeft="10dp"
            android:text="我是内容"
            android:textSize="20dp"
            />
        <!-- 标签的ll -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        </LinearLayout>

        <www.weimeng.com.meili.view.NineGridTestLayout
            android:id="@+id/genduo_item_imgfenge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        >

        <ImageView
            android:id="@+id/gfdg_154"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@mipmap/comment"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/home_tv_2_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/gfdg_154"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:text="542"
            />

        <ImageView
            android:id="@+id/home_imag_2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@mipmap/read"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@+id/gfdg_154"
            android:layout_toEndOf="@+id/home_tv_2_1"
            />

        <TextView
            android:id="@+id/home_tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="135"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/home_imag_2"
            android:layout_marginStart="11dp"
            />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="@color/fenggexian"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/yykdkcicdisdch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="~ 每人儿已阅读 ~"
            android:textColor="@color/theme_color"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            />

        <LinearLayout
            android:id="@+id/hean_image_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_below="@id/yykdkcicdisdch"
            >
        </LinearLayout>

    </RelativeLayout>



</LinearLayout>